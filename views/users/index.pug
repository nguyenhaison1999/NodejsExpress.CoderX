extends ../layouts/common.pug

block content
  h1 
    span.mr-3 Danh sách binh lính
    a.btn.btn-primary.mb-2(href="/users/create") New

  .d-flex.align-items-center
    form.ml-auto(action="/users/search", method="GET", class="d-flex")
      input(type="text", name="q", id="search_box", class="form-control")
      button(class="btn btn-primary ml-2") Search

  table.table
    tr
      th Avatar
      th Name
      th Phone
      th Actions

    each user in users
      tr
        td
          img(src= user.avatar, width="64", style="border-radius: 50%;")
        td= user.name
        td= user.phone
        td
          a.btn.btn-light(href="/users/" + user.id) View

  script. 
    var searchBox = document.getElementById('search_box')
    searchBox.value = sessionStorage.getItem('draft')
    searchBox.addEventListener('change', function() {sessionStorage.setItem('draft', searchBox.value);})

