extends ../layouts/common.pug

block content
  h1 Danh sách binh lính

  a(href="/users/create") Add new user

  form(action="/users/search", method="GET", class="d-flex")
    input(type="text", name="q" id="search_box", class="form-control")
    button(class="btn btn-primary ml-2") Search
  ul
    each user in users
      li
        span= user.name
        span &nbsp;
        a(href="/users/" + user.id) View

  script. 
    var searchBox = document.getElementById('search_box')
    searchBox.value = sessionStorage.getItem('draft')
    searchBox.addEventListener('change', function() {sessionStorage.setItem('draft', searchBox.value);})

